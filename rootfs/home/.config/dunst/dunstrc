[colors]
    background = "#0f1013"
    foreground = "#eac094"
    frame_color = "#b55945"

[global]
    ### Display ###
    follow = mouse

    origin = "top-center"
    separator_height = 2
    frame_width = 2
    corner_radius = 8
    offset = 0x0
    width = (200, 800)
	transparency = 5

    idle_threshold = 120
    mouse_right_click = close_current

    ### Text ###
    font = Fira Code Nerd Font 16

    markup = full

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%a</b>\n%s\n%b"
    alignment = center

    ### Misc/Advanced ###
    browser = /usr/bin/firefox

[urgency_low]
    timeout = 5

[urgency_normal]
    timeout = 5

[urgency_critical]
    frame_color = "#F5292E"
    timeout = 8

[spotify]
    appname = Spotify
    timeout = 5
