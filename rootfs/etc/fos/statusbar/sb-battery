#!/bin/bash

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (üîå for plugged up, üîã for discharging on battery, etc.).

# Loop through all attached batteries and format the info
for battery in /sys/class/power_supply/BAT?*; do
	# If non-first battery, print a space separator.
	[ -n "${capacity+x}" ] && printf " "

        # Get capacity
        capacity="$(cat "$battery/capacity" 2>&1)"

        # Sets up the status and capacity
	case "$(cat "$battery/status" 2>&1)" in
		"Unknown") status="Ôñê" ;;
		"Charging") status="ÔÆ£" ;;
                "Discharging") status="ÔÆ§" ;;
	esac

        # Warn constantly when under 10%
        lockfile="/tmp/sb-battery-low"
        if [[ "$status" != "ÔÆ£" ]] && [[ "$capacity" -le 10 ]] && [[ ! -f "$lockfile" ]]
        then
            touch $lockfile
            notify-send -u critical -t 8000 -h int:value:"$capacity" "I'am low on health!"
            sleep 60 && rm $lockfile &
        fi


	# Will make a warn variable if discharging and low
	warn=""
	[ "$status" = "ÔÆ§" ] && [ "$capacity" -le 25 ] && warn="ÔñÇ"

        # Default battery symbol if status is not unknown
        default=""
        [[ "$status" != "Ôñê" ]] && [[ -z "$warn" ]] && default="Ôñç"

	# Prints the info
	printf "%s%s%s %d%%" "$default" "$warn" "$status" "$capacity";
done && printf "\\n"
